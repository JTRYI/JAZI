<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".BrunoMars">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Recommended Bruno Mars Songs"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/S1007"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/just_the_way_u_are_bruno_mars" />

    <TextView
        android:id="@+id/txtTitle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="Just The Way You Are"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/S1007"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtArtist7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="21dp"
        android:text="Bruno Mars"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/S1007"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle7" />

    <ImageView
        android:id="@+id/S1008"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/S1007"
        app:srcCompat="@drawable/the_lazy_song_bruno_mars" />

    <TextView
        android:id="@+id/txtTitle8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:text="The Lazy Song"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/S1008"
        app:layout_constraintTop_toBottomOf="@+id/txtArtist7" />

    <TextView
        android:id="@+id/txtArtist8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="156dp"
        android:text="Bruno Mars"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/S1007"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle7" />

    <ImageView
        android:id="@+id/S1009"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/S1008"
        app:srcCompat="@drawable/thats_what_i_like_bruno_mars" />

    <TextView
        android:id="@+id/txtTitle9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:text="That's What I Like"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/S1009"
        app:layout_constraintTop_toBottomOf="@+id/txtArtist8" />

    <TextView
        android:id="@+id/txtArtist9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="18dp"
        android:text="Bruno Mars"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/S1009"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle9" />

    <ImageView
        android:id="@+id/add7"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="S1007"
        app:layout_constraintBottom_toBottomOf="@+id/S1007"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/S1007"
        app:layout_constraintVertical_bias="0.387"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="#FF5722" />

    <ImageView
        android:id="@+id/add8"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="S1008"
        app:layout_constraintBottom_toBottomOf="@+id/S1008"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/S1008"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="#FF5722" />

    <ImageView
        android:id="@+id/add9"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="S1009"
        app:layout_constraintBottom_toBottomOf="@+id/S1009"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/S1009"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="#FF5722" />

</androidx.constraintlayout.widget.ConstraintLayout>